{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowJs": true,
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "downlevelIteration": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
  ],
}
